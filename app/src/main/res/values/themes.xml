<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DigikalaMvvm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/myview</item>
        <item name="colorPrimaryVariant">@color/myview</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

    </style>
    <style name="Ratingbar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#C98F8F8F</item>
        <item name="colorControlActivated">@color/myview</item>
    </style>
    <style name="bottom_sheet" parent="LargeTextView">
        <item name="android:textColor">@color/aboutUs_color</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:gravity">start</item>
    </style>
    <!-- view line separator : -->
    <style name="view_separator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
    </style>



    <style name="VerySmallBlackTextView">
        <item name="android:textSize">10.5sp</item>
        <item name="fontFamily">@font/digikala_font</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SmallTextView">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/digikala_font</item>
    </style>
    <style name="SmallBlackTextView" parent="SmallTextView">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="NormalTextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/digikala_font</item>
    </style>
    <style name="NormalBlackTextView" parent="NormalTextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LargeTextView">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/digikala_font</item>
    </style>
    <style name="LargeBlackTextView" parent="LargeTextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LargeEditText">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/digikala_font</item>
        <item name="android:textColor">@color/aboutUs_color</item>
    </style>

</resources>